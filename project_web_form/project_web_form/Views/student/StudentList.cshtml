@model List<project_web_form.context.tbl_student>
@{
    ViewBag.Title = "StudentList";
}

<table class="table table-hover">
    <tr>
        <th>Name</th>
        <th>FName</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>Description</th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model) 
         {
        <tr>
            <td>@item.Name</td>
            <td>@item.Fname</td>
            <td>@item.Email</td>
            <td>@item.Mobile</td>
            <td>@item.Descritipion</td>
            <td>
                <a href="@Url.Action("Student", new {item.ID,item.Name,item.Fname,item.Mobile,item.Email,item.Descritipion} )" class="btn btn-success">Edit</a>

                <a href= "@Url.Action("Delete", new {item.ID})"  class="btn btn-danger">Delete</a>
            </td>

        </tr>
         }

</table>

